<div class="user-registration-container">
  <h2 class="user-registration__title">ユーザー登録</h2>

<%= form_with model: resource, url: registration_path(resource_name), local: true, class: "user-registration__form" do |f| %>
  <div class="mb-3">
    <%= f.label :username, "ユーザー名 (20文字まで)", class: "form-label" %>
    <%= f.text_field :username, autofocus: true,required: true, autocomplete: "username", class: "form-control" %>
    <%= render "shared/field_error", resource: resource, field_name: :username %>
  </div>
 
  <div class="mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %>
    <%= f.email_field :email, required: true, autocomplete: "email", class: "form-control" %>
    <%= render "shared/field_error", resource: resource, field_name: :email %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "パスワード (6文字以上)", class: "form-label" %>
    <%= f.password_field :password, required: true, autocomplete: "new-password", class: "form-control" %>
    <%= render "shared/field_error", resource: resource, field_name: :password %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "パスワード (確認用)", class: "form-label" %>
    <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "form-control" %>
    <%= render "shared/field_error", resource: resource, field_name: :password_confirmation %>
  </div>

  <div class="d-grid mt-4">
    <%= f.submit "新規登録", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="cuser-registration__login-link mt-3 text-center">
  すでにアカウントをお持ちの方は
  <%= link_to "こちら", new_user_session_path, class: "user-registration__login-link-anchor" %>
</div> 

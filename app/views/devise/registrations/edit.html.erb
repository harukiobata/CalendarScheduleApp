<div class="user-registration-container">
  <h2 class="user-registration__title">ユーザー情報編集</h2>

  <%= form_with model: resource, url: registration_path(resource_name), method: :put, local: true, class: "user-registration__form" do |f| %>
    <div class="mb-3">
      <%= f.label :username, "ユーザー名 (20文字まで)", class: "form-label" %>
      <%= f.text_field :username, class: "form-control", autofocus: true, required: true, autocomplete: "username" %>
      <%= render "shared/field_error", resource: resource, field_name: :username %>
    </div>

    <div class="mb-3">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, class: "form-control", required: true, autocomplete: "email" %>
      <%= render "shared/field_error", resource: resource, field_name: :email %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "新しいパスワード (6文字以上)", class: "form-label" %>
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "新しいパスワード (確認用)", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      <%= render "shared/field_error", resource: resource, field_name: :password_confirmation %>
    </div>

    <div class="mb-3">
      <%= f.label :current_password, "現在のパスワード", class: "form-label" %>
      <%= f.password_field :current_password, class: "form-control", required: true, autocomplete: "current-password" %>
      <%= render "shared/field_error", resource: resource, field_name: :current_password %>
    </div>

    <div class="d-grid mt-4">
      <%= f.submit "情報の更新", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>


 <%= form_with model: event, data: { turbo_frame: "event_panel" } do |f| %> 
  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, id: "event-title", class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :date, "日付", class: "form-label" %>
    <%= f.date_field :date, id: "event-date", class: "form-input", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :start_time, "開始時間", class: "form-label" %>
    <%= f.time_field :start_time, id: "event-start_time", class: "form-input", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :end_time, "終了時間", class: "form-label" %>
    <%= f.time_field :end_time, id: "event-end_time", class: "form-input", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :location, "場所" %>
    <%= f.text_field :location, id: "event-location", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category, "種類" %>
    <%= f.select :category, options_for_select([["重要","重要"], ["仕事","仕事"], ["プライベート","プライベート"], ["その他","その他"]], f.object.category), {}, id: "event-category", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :note, "備考" %>
    <%= f.text_area :note, id: "event-note", class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit event.new_record? ? "作成" : "更新", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="simple-calendar">
  <div class="calendar-heading d-flex justify-content-between align-items-center mb-2">
    <time datetime="<%= start_date.strftime('%Y-%m') %>" class="calendar-title fw-bold fs-5">
      <%= start_date.year %>/<%= t('date.month_names')[start_date.month] %>
    </time>

    <nav class="calendar-nav btn-group">
      <%= link_to "先月", root_path(start_date: @start_date.prev_month), data: { turbo_frame: "calendar" }, class: "btn btn-outline-secondary btn-sm" %>
      <%= link_to "今月", root_path(start_date: Date.today.beginning_of_month), data: { turbo_frame: "calendar" }, class: "btn btn-outline-primary btn-sm" %>
      <%= link_to "来月", root_path(start_date: @start_date.next_month), data: { turbo_frame: "calendar" }, class: "btn btn-outline-secondary btn-sm" %>
    </nav>
  </div>

  <div class="calendar-body">
    <table class="table table-sm table-bordered text-center mb-0">
      <thead>
        <tr>
          <% date_range.slice(0, 7).each do |day| %>
            <th><%= t('date.abbr_day_names')[day.wday] %></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% date_range.each_slice(7) do |week| %>
          <tr>
            <% week.each do |day| %>
              <%= content_tag :td, class: calendar.td_classes_for(day) do %>
                <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

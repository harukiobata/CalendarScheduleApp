<h1>テンプレート編集</h1>

<%= render "available_codes" %>

<%= form_with model: @mail_template do |f| %>
  <div>
    <%= f.label :subject, "件名" %><br>
    <%= f.text_field :subject %>
  </div>

  <div>
    <%= f.label :body, "本文" %><br>
    <%= f.text_area :body, rows: 10 %>
  </div>

  <%= f.submit "更新する" %>
<% end %>

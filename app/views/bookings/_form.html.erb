<%= form_with(model: booking, url: bookings_path, data: { turbo_frame: "booking_frame" }, class: "booking-form") do |f| %>
  <div class="booking-form__group">
    <%= f.label :name, "お名前", class: "booking-form__label" %>
    <%= f.text_field :name, class: "booking-form__input form-control", required: true %>
  </div>

  <div class="booking-form__group">
    <%= f.label :email, "メールアドレス", class: "booking-form__label" %>
    <%= f.email_field :email, class: "booking-form__input form-control", required: true %>
  </div>

  <div class="booking-form__group">
    <%= f.label :memo, "メッセージ", class: "booking-form__label" %>
    <%= f.text_area :memo, class: "booking-form__textarea form-control" %>
  </div>

  <%= f.hidden_field :owner_id, value: owner.id %>
  <%= f.hidden_field :start_time, value: booking.start_time %>
  <%= f.hidden_field :end_time, value: booking.end_time %>

  <div class="booking-form__date">
    <p>
      <strong>予約日時:</strong>
      <%= booking.start_time.strftime("%Y年%m月%d日 %H:%M") %> 〜 
      <%= booking.end_time.strftime("%H:%M") %>
    </p>
  </div>

  <div class="booking-form__actions">
    <%= f.submit "確定", class: "btn btn-primary" %>
    <%= link_to "戻る", :back, class: "btn btn-secondary", data: { turbo_frame: "_top" } %>
  </div>
<% end %>


<div class="home-container" data-controller="schedule-popup">
  <div class="left-panel">
    <div class="calendar-container">
      <%= render "home/calendar", events: @events, start_date: @start_date %>
    </div>

    <section class="event-section">
      <div class="tab-navigation d-flex gap-2">
        <%= link_to "作成", new_event_path, data: { turbo_frame: "event_panel" }, class: "tab-link" %>
        <%= link_to "一覧", events_path, data: { turbo_frame: "event_panel" }, class: "tab-link" %>
        <%= link_to "予約", bookings_path, data: { turbo_frame: "event_panel" }, class: "tab-link" %>
      </div>

      <div class="event-form-panel">
        <%= render template: "events/new" %>
      </div>
    </section>
  </div>

  <div class="right-panel schedule-popup" data-schedule-popup-target="panel">
    <div class="home-right-container"> 
      <%= render template: "schedules/daily_schedule", locals: { base_date: @base_date, dates: @dates, grouped_events: @grouped_events, date_active_times: @date_active_times } %>
    </div>
  </div>

  <button class="schedule-popup-button"
          aria-label="スケジュール表示"
          data-action="click->schedule-popup#toggle"
          data-schedule-popup-target="button">
    <i class="bi bi-calendar"></i>
  </button>
</div>
